*HASHES TABLES

  TYPES : BEGIN OF lty_data,
        BRANCHID TYPE ZDE_BRANCH_ID,
        LOCATION TYPE ZDE_LOC,
  END OF lty_data.

  DATA : lt_data TYPE HASHED TABLE OF lty_data WITH UNIQUE KEY BRANCHID.
  DATA : lwa_data TYPE lty_data.

lwa_data-BRANCHID = '1'.
lwa_data-LOCATION = 'PUNE'.
INSERT lwa_data INTO TABLE lt_data.
CLEAR : lwa_data.

lwa_data-BRANCHID = '2'.
lwa_data-LOCATION = 'DELHI'.
INSERT lwa_data INTO TABLE lt_data.
CLEAR : lwa_data.

lwa_data-BRANCHID = '3'.
lwa_data-LOCATION = 'LATUR'.
INSERT lwa_data INTO TABLE lt_data.
CLEAR : lwa_data.

lwa_data-BRANCHID = '5'.
lwa_data-LOCATION = 'NAGPUR'.
INSERT lwa_data INTO TABLE lt_data.
CLEAR : lwa_data.

lwa_data-BRANCHID = '4'.
lwa_data-LOCATION = 'KOCHI'.
INSERT lwa_data INTO TABLE lt_data.
CLEAR : lwa_data.

LOOP AT lt_data INTO lwa_data.
  WRITE : / lwa_data-BRANCHID , lwa_data-LOCATION.
  ENDLOOP.
